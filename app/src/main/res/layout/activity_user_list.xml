<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_list">


    <!-- Header -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:title="Chat"
            app:titleTextColor="#232222"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Divider Line below the Header -->
    <!-- User List -->


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/appBarLayout"
        android:background="?android:attr/listDivider" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="80dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="76dp">

        <!-- forward Icon -->
        <ImageView
            android:id="@+id/backIcon1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_forward"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/usernameTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="User Name"
            android:layout_marginStart="70dp"
            android:layout_marginTop="4dp"
            android:padding="10dp"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="209dp" />

        <ImageView
            android:id="@+id/profileImageView1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/round_background"
            android:src="@drawable/camera_chat"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="189dp" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="160dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="76dp">

        <!-- forward Icon -->
        <ImageView
            android:id="@+id/backIcon2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_forward"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/usernameTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="User Name"
            android:layout_marginStart="70dp"
            android:layout_marginTop="4dp"
            android:padding="10dp"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="209dp" />

        <ImageView
            android:id="@+id/profileImageView2"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/round_background"
            android:src="@drawable/camera_chat"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="189dp" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="240dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="76dp">

        <!-- forward Icon -->
        <ImageView
            android:id="@+id/backIcon3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_forward"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/usernameTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="User Name"
            android:layout_marginStart="70dp"
            android:layout_marginTop="4dp"
            android:padding="10dp"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="209dp" />

        <ImageView
            android:id="@+id/profileImageView3"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/round_background"
            android:src="@drawable/camera_chat"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="189dp" />
    </RelativeLayout>







</RelativeLayout>